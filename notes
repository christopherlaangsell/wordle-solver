
;; Example usage
(require '[wordle-solver.interactive :as interactive])
(require '[wordle-solver.harness :as harness])
(require '[wordle-solver.data :as data])
(require '[wordle-solver.core :as core])
(require '[clojure.pprint])

(def r-firstmove (interactive/evaluate-first-move))

(def ndle-state  (interactive/initialize-ndle-state 4 harness/select-best-guess-summed r-firstmove))

;; LOOP
(interactive/examine-next-move ndle-state)

(def ndle-state
     (interactive/record-guess-results ndle-state
     "clipt" ;; update this to your guess
     '((1 0 0 1 0) ;; update this to the response colors
       (0 0 0 0 0)
       (2 0 0 1 1)
       (0 0 0 0 0))))
       
